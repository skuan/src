<h1>New Review</h1>

<form action='/reviews/create' method='post' role='form' class='form-horizontal' >

  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>

    <div class="col-sm-10">
      <input name='title' type='text'><br>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>

    <div class="col-sm-10">
      <input name='description' type='text'><br>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">How Many Stars?</label>

    <div class="col-sm-10">
      <input name='star_count' type='text'><br>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Author Name</label>

    <div class="col-sm-10">
      <input name='author' type='text'><br>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"></label>

    <div class="col-sm-10">
      <input type='submit' class='btn btn-danger'>
    </div>
  </div>
</form>
